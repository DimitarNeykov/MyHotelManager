@using System.Security.Cryptography.X509Certificates
@model MyHotelManager.Web.ViewModels.Companies.CompanyCreateInputModel

@{
    var cities = Model.Cities.Select(x => new SelectListItem(x.Name + " / " + x.Region, x.Id.ToString()));
    this.ViewData["Title"] = "New Company";
}
<h1 class="text-black-50 text-lg-center mt-5">Create New Company</h1>


<div class="card-footer col mt-5">
    <div class="media flex-wrap w-100 justify-content-center text-lg-center">
        <form asp-action="Create" method="post" class="col-md-4 img-thumbnail">
            <div class="mt-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control mt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Bulstat"></label>
                <input asp-for="Bulstat" class="form-control mt-2" />
                <span asp-validation-for="Bulstat" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zM12.5 1a.5.5 0 0 1 .5.5V3h1.5a.5.5 0 0 1 0 1H13v1.5a.5.5 0 0 1-1 0V4h-1.5a.5.5 0 0 1 0-1H12V1.5a.5.5 0 0 1 .5-.5z"/>
                </svg>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control mt-2"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z"/>
                </svg>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control mt-2"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="CityId"></label>
                <select asp-for="CityId" asp-items="cities"  class="form-control mt-2">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control mt-2" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <hr class="mt-3" />
            <input type="submit" class="btn btn-success float-right mt-2" />
        </form>
    </div>
</div>
