@model MyHotelManager.Web.ViewModels.Rooms.RoomCreateInputModel

@{
    var roomTypes = Model.RoomTypes.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
    this.ViewData["Title"] = "New Room";
}

<h1 class="text-black-50 text-lg-center mt-5">Create New Room</h1>

<div class="card-footer col mt-5">
    <div class="media flex-wrap w-100 justify-content-center text-lg-center">
        <form asp-action="Create" method="post" class="col-md-4 img-thumbnail">
            <div class="mt-2">
                <label asp-for="Number"></label>
                <input asp-for="Number" class="form-control mt-2" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="RoomTypeId"></label>
                <select asp-for="RoomTypeId" asp-items="roomTypes" class="form-control mt-2">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control mt-2" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control mt-2" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <hr class="mt-3" />
            <input type="submit" class="btn btn-success float-right mt-2" />
        </form>
    </div>
</div>