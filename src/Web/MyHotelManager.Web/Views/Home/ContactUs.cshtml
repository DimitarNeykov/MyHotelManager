@model MyHotelManager.Web.ViewModels.Home.ContactFormInputModel
@{
    this.ViewData["Title"] = "Home Page";
}
<object style="width: 100%; height:500px;"
        data="https://openstreetmap.org/export/embed.html?bbox=23.40328%2C42.64617%2C23.39128%2C42.64717&amp;layer=mapnik&amp;marker=42.64717%2C23.40128">
</object>
<div class="container">
    <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="card o-hidden border-0 shadow-lg my-5 bg-gradient-primary">
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="p-4">
                            <div class="text-center">
                                <h1 class="h3 mb-4 font-italic text-white-50">Contact Us!</h1>
                            </div>
                            <form class="user text-center text-white-50" method="post">
                                <div class="form-group was-validated">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control form-control-user text-center" placeholder="Hotel Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group was-validated">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control form-control-user text-center" placeholder="Hotel Name" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group was-validated">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control form-control-user text-center" placeholder="Hotel Name" required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group was-validated">
                                    <label asp-for="Content"></label>
                                    <textarea asp-for="Content" class="form-control text-center" placeholder="Content" maxlength="20000"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                                <hr />
                                <button type="submit" class="btn btn-success btn-user btn-block">
                                    Submit
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-sm-5">
        <div class="border-0">
            <ul class="list-group list-group-flush text-black-50 font-weight-bold text-lg font-italic">
                <li class="list-group-item rounded-pill border-bottom-light bg-gray-200">E-Mail: <span class="float-right"> </span></li>
                <li class="list-group-item rounded-pill border-bottom-light bg-gray-200">Mobile Number: <span class="float-right"> </span></li>
                <li class="list-group-item rounded-pill border-bottom-light bg-gray-200">Address: <span class="float-right"> </span></li>
            </ul>
        </div>
    </div>
</div>