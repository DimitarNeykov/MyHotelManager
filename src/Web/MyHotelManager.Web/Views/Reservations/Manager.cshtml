@model IEnumerable<MyHotelManager.Web.ViewModels.Reservations.ReservationManageViewModel>

@{
    this.ViewData["Title"] = "Reservations";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr class="bg-primary text-white-50">
                        <th>Room</th>
                        <th>Guest Name</th>
                        <th>Adult Count</th>
                        <th>Child Count</th>
                        <th>Book Date</th>
                        <th>Arrival Date</th>
                        <th>Return Date</th>
                        <th>Register</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr class="bg-primary text-white-50">
                        <th>Room</th>
                        <th>Guest Name</th>
                        <th>Adult Count</th>
                        <th>Child Count</th>
                        <th>Book Date</th>
                        <th>Arrival Date</th>
                        <th>Return Date</th>
                        <th>Register</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @{
                        foreach (var reservation in Model)
                        {
                            <tr title="@reservation.Description">
                                <td>@reservation.Room.Number</td>
                                <td>@reservation.GuestsReservations.First().Guest.FirstName @reservation.GuestsReservations.First().Guest.LastName</td>
                                <td>@reservation.AdultCount</td>
                                <td>@reservation.ChildCount</td>
                                <td>@reservation.BookDate.ToString("dd.MM.yyyy")</td>
                                <td>@reservation.ArrivalDate.ToString("dd.MM.yyyy")</td>
                                <td>@reservation.ReturnDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-controller="Reservations" asp-action="Create" class="btn btn-success w-100">
                                        <i class="fas fa-user-plus"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Reservations" asp-action="Update" asp-route-reservationId="@reservation.Id" class="btn btn-warning w-100">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger w-100" data-toggle="modal" data-target="#tips-@reservation.Id">
                                        <i class="fas fa-trash text-white"></i>
                                    </a>
                                </td>
                            </tr>
                            <div class="modal fade" id="tips-@reservation.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body text-danger">Select "Delete" below if you want to remove a reservation.</div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                            <form class="form-inline" asp-action="Delete" asp-controller="Reservations" asp-route-reservationId="@reservation.Id">
                                                <button type="submit" class="btn btn-danger">Remove</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
