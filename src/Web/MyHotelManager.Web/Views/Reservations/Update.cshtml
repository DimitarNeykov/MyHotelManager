@model MyHotelManager.Web.ViewModels.Reservations.ReservationUpdateInputModel

@{
    this.ViewData["Title"] = "Edit Reservation";
}

<div class="container" id="form">
    <div class="card o-hidden border-0 shadow-lg my-5 bg-gradient-primary">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h3 mb-4 text-white-50 font-italic">Edit Reservation!</h1>
                        </div>

                        <form class="user" method="post">
                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-5 mb-3 mb-sm-0">
                                    <label asp-for="ArrivalDate"></label>
                                    <input type="date" asp-for="ArrivalDate" oninput="availableRooms()" id="arrivalDate" class="form-control form-control-user text-center is-valid" placeholder="Arrival Date">
                                </div>

                                <div class="col-sm-5 mb-3 mb-sm-0">
                                    <label asp-for="ReturnDate"></label>
                                    <input type="date" asp-for="ReturnDate" oninput="availableRooms()" id="returnDate" class="form-control form-control-user text-center is-valid" placeholder="Return Date">
                                </div>

                                <div class="col-sm-2">
                                    <label asp-for="Nights"></label>
                                    <input asp-for="Nights" id="nights" class="form-control form-control-user text-center is-valid" readonly="readonly" placeholder="Nights" required>
                                </div>
                            </div>
                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="GuestFirstName"></label>
                                    <input asp-for="GuestFirstName" id="guests" class="form-control form-control-user text-center is-invalid" placeholder="First Name" required>
                                    <span asp-validation-for="GuestFirstName" class="text-danger"></span>
                                </div>

                                <div class="col-sm-6">
                                    <label asp-for="GuestLastName"></label>
                                    <input asp-for="GuestLastName" class="form-control form-control-user text-center is-invalid" placeholder="Last Name" required>
                                    <span asp-validation-for="GuestLastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group was-validated text-center text-white-50">
                                <label asp-for="GuestPhoneNumber"></label>
                                <input asp-for="GuestPhoneNumber" class="form-control form-control-user text-center is-invalid" placeholder="Phone Number" minlength="10" required>
                                <span asp-validation-for="GuestPhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                                    <label asp-for="AdultCount"></label>
                                    <input asp-for="AdultCount" class="form-control form-control-user text-center is-invalid" placeholder="Adult Count" required>
                                    <span asp-validation-for="AdultCount" class="text-danger"></span>
                                </div>

                                <div class="col-sm-6 text-center">
                                    <label asp-for="ChildCount"></label>
                                    <input asp-for="ChildCount" class="form-control form-control-user text-center is-invalid" placeholder="Child Count" required>
                                    <span asp-validation-for="ChildCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                                    <label asp-for="MaxAdultCount"></label>
                                    <input asp-for="MaxAdultCount" id="MaxAdultCount" readonly="readonly" class="form-control form-control-user text-center is-valid">
                                </div>

                                <div class="col-sm-6 text-center">
                                    <label asp-for="MaxChildCount"></label>
                                    <input asp-for="MaxChildCount" id="MaxChildCount" readonly="readonly" class="form-control form-control-user text-center is-valid">
                                </div>
                            </div>
                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                                    <label asp-for="RoomNumber"></label>
                                    <input asp-for="RoomNumber" id="roomNumber" readonly="readonly" class="form-control form-control-user text-center is-valid">
                                </div>

                                <div class="col-sm-6 text-center">
                                    <label asp-for="RoomType"></label>
                                    <input asp-for="RoomType" id="roomType" readonly="readonly" class="form-control form-control-user text-center is-valid">
                                </div>
                            </div>

                            <div class="form-group row was-validated text-center text-white-50">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="RoomPrice"></label>
                                    <input value="@Model.RoomPrice" asp-for="RoomPrice" id="roomPrice" readonly="readonly" class="form-control form-control-user text-center is-valid" placeholder="Room Price">
                                </div>

                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="CustomPrice"></label>
                                    <input asp-for="CustomPrice" id="customPrice" class="form-control form-control-user text-center is-valid" placeholder="Custom Price">
                                    <span asp-validation-for="CustomPrice" class="text-danger"></span>
                                </div>

                                <div class="col-sm-4">
                                    <label asp-for="AllPrice"></label>
                                    <input asp-for="AllPrice" readonly="readonly" id="allPrice" class="form-control form-control-user text-center is-valid" placeholder="All Price" required>
                                    <span asp-validation-for="AllPrice" class="text-danger"></span>
                                </div>
                            </div>

                            <hr />

                            <div class="form-group row text-center was-validated">
                                <div class="col-sm-4 custom-control custom-checkbox">
                                    <input type="checkbox" asp-for="HasBreakfast" class="custom-control-input">
                                    <label asp-for="HasBreakfast" class="custom-control-label text-white"></label>
                                </div>

                                <div class="col-sm-4 custom-control custom-checkbox">
                                    <input type="checkbox" asp-for="HasLunch" class="custom-control-input">
                                    <label asp-for="HasLunch" class="custom-control-label text-white"></label>
                                </div>

                                <div class="col-sm-4 custom-control custom-checkbox">
                                    <input type="checkbox" asp-for="HasDinner" class="custom-control-input">
                                    <label asp-for="HasDinner" class="custom-control-label text-white"></label>
                                </div>
                            </div>

                            <hr />

                            <div class="form-group was-validated">
                                <textarea asp-for="Description" id="description" class="form-control text-center" placeholder="Description" maxlength="200"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <input asp-for="RoomId" id="roomId" hidden="" readonly="readonly" class="custom-control-input">
                            <input asp-for="Id" hidden="" id="reservationId" readonly="readonly" class="custom-control-input">

                            <button type="submit" class="btn btn-success btn-user btn-block" asp-route="@Model.RoomId">
                                Save
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="availableRooms"></div>

@section Scripts {
    <script src="~/js/custom/Reservation/Update.js"></script>
}