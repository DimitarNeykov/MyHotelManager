@model MyHotelManager.Web.ViewModels.Reservations.ReservationCreateInputModel

@{
    this.ViewData["Title"] = "New Reservation";
    var p = Model.ReturnDate - Model.ArrivalDate;
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create new Reservation!</h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row was-validated">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="date" value="" asp-for="ArrivalDate" class="form-control form-control-user is-invalid" placeholder="Arrival Date" required>
                                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input type="date" value="" asp-for="ReturnDate" class="form-control form-control-user is-invalid" placeholder="Return Date" required>
                                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row was-validated">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="GuestInfo.FirstName" class="form-control form-control-user is-invalid" placeholder="First Name" required>
                                    <span asp-validation-for="GuestInfo.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input value="" asp-for="GuestInfo.LastName" class="form-control form-control-user is-invalid" placeholder="Last Name" required>
                                    <span asp-validation-for="GuestInfo.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row was-validated">
                                <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                                    <input value="" asp-for="AdultCount" class="form-control form-control-user is-invalid" placeholder="Adult Count" required>
                                    <span asp-validation-for="AdultCount" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 text-center">
                                    <input value="" asp-for="ChildCount" class="form-control form-control-user is-invalid" placeholder="Child Count" required>
                                    <span asp-validation-for="ChildCount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group was-validated">
                                <textarea asp-for="Description" class="form-control" placeholder="Description" maxlength="200"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success btn-user btn-block" asp-route="@Model.RoomId">
                                Create Reservation
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>