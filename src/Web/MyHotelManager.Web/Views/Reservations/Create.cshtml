@model MyHotelManager.Web.ViewModels.Reservations.ReservationCreateInputModel

@{
    var rooms = Model.Rooms.Select(x => new SelectListItem(x.Number, x.Id.ToString()));
    this.ViewData["Title"] = "New Reservation";
}

<div class="card-footer col">
    <h1 class="text-black-50 mb-5 text-center">Create New Room</h1>
    <div class="media flex-wrap w-100 justify-content-center text-lg-center">
        <form asp-action="Create" method="post" class="col-md-5 img-thumbnail">
            <div class="mt-2">
                <label asp-for="RoomId"></label>
                <select asp-for="RoomId" asp-items="rooms" class="form-control mt-2">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="ArrivalDate"></label>
                <input type="date" asp-for="ArrivalDate" class="form-control mt-2"/>
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="ReturnDate"></label>
                <input type="date" asp-for="ReturnDate" class="form-control mt-2"/>
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="GuestInfo.FirstName"></label>
                <input asp-for="GuestInfo.FirstName" class="form-control mt-2"/>
                <span asp-validation-for="GuestInfo.FirstName" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="GuestInfo.LastName"></label>
                <input asp-for="GuestInfo.LastName" class="form-control mt-2"/>
                <span asp-validation-for="GuestInfo.LastName" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control mt-2"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <hr class="mt-3"/>
            <input type="submit" class="btn btn-success float-right mt-2"/>
        </form>
    </div>
</div>